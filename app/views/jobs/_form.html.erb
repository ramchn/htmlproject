<%= form_with model: job do |form| %>
  <table>
  <tr>
    <td><%= form.label :title %>:</td> 
    <td><%= form.text_field :title %></td>
    <% job.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </tr>
  <tr><td colspan=2>&nbsp;</td></tr>
  <tr>
    <td><%= form.label :description %>:</td> 
    <td><%= form.text_area :description %></td>
    <% job.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </tr>
  <tr><td colspan=2>&nbsp;</td></tr>
  <tr>
    <td><%= form.label :location %>:</td>
    <td><%= form.select :location, ['Chennai', 'Coimbatore', 'Salem'] %>
  </tr>
  <tr><td colspan=2>&nbsp;</td></tr>
  <tr>
    <td colspan=2><%= form.submit %></td>    
  </tr>
<% end %>